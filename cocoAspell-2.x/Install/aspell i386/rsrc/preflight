#	This script checks and installs the make utility

cd /usr/bin 

if [ -f make ]
then
	exit 0
fi

if [ -f gnumake ]
then
	current_time=`date "+gnumake-%Y-%m-%d-%H-%M-%S"`
	mv gnumake "$current_time"
fi

tar -xpf "$1/Contents/Resources/make.tar"

exit 0

