#	This script checks and installs the make utility

echo "running postflight..."

dir="$2/Application Support/cocoAspell/aspell6-en-6.0-0";

export PATH="/bin:/usr/bin:/usr/local/bin:.";

if [ -d "$dir" ]
then
	echo "$dir found, installing"
	cd "$dir"
	./configure
	make
else
	echo "$dir not found"
fi

exit 0

